# =============================================================================
# Local Development Environment
# =============================================================================
# Copy this file to .env.local and adjust values as needed

APP_NAME="Cookies Manager CRM (Local)"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=password
DB_CHARSET=utf8
DB_PREFIX=

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache & Session Configuration
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# Mail Configuration (Log to files for local development)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Queue Configuration
QUEUE_WORKERS=1
ENABLE_HORIZON=false

# Supervisor Configuration
SUPERVISOR_PASSWORD=local_password

# Vite Configuration
VITE_APP_ENV=local
VITE_APP_URL=http://localhost:8000
VITE_APP_NAME="${APP_NAME}" 